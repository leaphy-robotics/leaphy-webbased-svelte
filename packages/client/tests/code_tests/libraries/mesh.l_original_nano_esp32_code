#include <painlessMesh.h>

painlessMesh mesh;
uint32_t node_sender;
void receivedCallback(uint32_t from, String &msg) {
  node_sender = from;
  if (msg == "test") {
    mesh.sendSingle(node_sender, "test");
  }
}

void leaphyProgram() {
  while (true) {
    mesh.sendBroadcast("test");
    mesh.update();
  }
}

void setup() {
	Serial.begin(115200);
  mesh.init("Leaphy Mesh", "Leaphy123");
  mesh.onReceive(&receivedCallback);


  leaphyProgram();
}

void loop() {

}
